<h1>Listing events</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Project</th>
    <th>Person</th>
    <th>Shared event</th>
    <th>Description</th>
    <th>Time date</th>
    <th>Source</th>
    <th>Type</th>
    <th>Visibility</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.id %></td>
    <td><%= event.name %></td>
    <td><%= event.project_id %></td>
    <td><%= event.person_id %></td>
    <td><%= event.shared_event_id %></td>
    <td><%= event.description %></td>
    <td><%= event.time_date %></td>
    <td><%= event.source %></td>
    <td><%= event.type %></td>
    <td><%= event.visibility %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

