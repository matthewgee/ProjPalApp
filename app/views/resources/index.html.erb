<h1>Listing resources</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Image</th>
    <th>Type</th>
    <th>Source</th>
    <th>Description</th>
    <th>T created</th>
    <th>T updated</th>
    <th>Shared event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.id %></td>
    <td><%= resource.name %></td>
    <td><%= resource.image %></td>
    <td><%= resource.type %></td>
    <td><%= resource.source %></td>
    <td><%= resource.description %></td>
    <td><%= resource.t_created %></td>
    <td><%= resource.t_updated %></td>
    <td><%= resource.shared_event_id %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

